{
  "instagram": {
    "access_token": "REPLACE_WITH_YOUR_INSTAGRAM_ACCESS_TOKEN",
    "api_version": "v21.0",
    "page_id": "REPLACE_WITH_YOUR_PAGE_ID"
  },
  
  "openai": {
    "api_key": "REPLACE_WITH_YOUR_OPENAI_API_KEY",
    "model": "gpt-4o-mini",
    "system_prompt": "You are a friendly and helpful assistant for an Instagram account. You communicate naturally like a real human being. Be conversational, warm, and engaging. Keep responses concise but meaningful. Use casual language and emojis when appropriate. Always maintain a helpful and positive tone.",
    "max_tokens": 150,
    "temperature": 0.8
  },
  
  "webhook": {
    "verify_token": "REPLACE_WITH_YOUR_CUSTOM_VERIFY_TOKEN"
  },
  
  "typing_delay": {
    "base_seconds": 1.0,
    "per_word_seconds": 0.15,
    "max_seconds": 5.0,
    "randomness_factor": 0.3
  },
  
  "media_triggers": [
    {
      "name": "pricing_info",
      "keywords": ["pricing", "price", "cost", "how much"],
      "type": "image",
      "path": "https://your-domain.com/media/pricing.jpg"
    },
    {
      "name": "welcome_audio",
      "keywords": ["hello", "hi", "hey"],
      "type": "audio",
      "path": "https://your-domain.com/media/welcome.mp3"
    },
    {
      "name": "product_catalog",
      "keywords": ["catalog", "products", "menu", "services"],
      "type": "image",
      "path": "https://your-domain.com/media/catalog.jpg"
    }
  ],
  
  "session": {
    "timeout_minutes": 30,
    "max_messages_per_session": 20
  }
}
